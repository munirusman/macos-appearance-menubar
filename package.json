{
  "name": "macos-appearance-switcher",
  "version": "1.0.0",
  "description": "A menu bar app to switch macOS appearance modes",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "release": "npm run build && echo 'Build complete. Now create a GitHub release and upload the files from dist/mac/'",
    "test": "jest --config test/jest.config.js",
    "test:watch": "jest --config test/jest.config.js --watch",
    "test:coverage": "jest --config test/jest.config.js --coverage"
  },
  "keywords": [
    "electron",
    "macos",
    "appearance",
    "menu-bar"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "electron-test": "^1.0.0"
  },
  "build": {
    "appId": "com.example.macos-appearance-switcher",
    "productName": "macOS Appearance Switcher",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "extendInfo": {
        "LSUIElement": true
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ]
    }
  }
}
