{
  "name": "macos-appearance-switcher",
  "version": "1.0.0",
  "description": "A menu bar app to switch macOS appearance modes",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "electron",
    "macos",
    "appearance",
    "menu-bar"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
