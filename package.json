  },
  "build": {
    "appId": "com.example.macos-appearance-switcher",
    "productName": "macOS Appearance Switcher",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
